{
  "manifest_version": 2,

  "name": "OPTC Player Helper",
  "description": "Simples extension to easily research a Character at http://optc-db.github.io/",
  "version": "0.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "OPTC Player Helper."
  },
  "content_scripts" : [{
      "matches" : [ "https://optc-db.github.io/*"],
      "js" : ["app/js/popup.js"]
  }]
}